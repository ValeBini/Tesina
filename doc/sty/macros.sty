%% THEOREMS
\declaretheoremstyle[
  headfont=\bfseries,
  bodyfont=\itshape,
  mdframed=
  {linecolor=white!20,
  skipabove=5pt,
  skipbelow=5pt}
]{thmstyle}
\declaretheoremstyle[
  headfont=\bfseries,
  bodyfont=\normalfont,
  mdframed=
  {linecolor=white!20,
  skipabove=5pt,
  skipbelow=5pt}
]{defstyle}
\declaretheorem[
  style=thmstyle,
  name=Teorema,
  numberwithin=chapter,
]{thm}
\declaretheorem[
  style = defstyle,
  name = Definici\'on,
  numberlike =thm,
]{definition}
\declaretheorem[
  style = defstyle,
  name = Ejemplo,
  numberlike = thm,
]{ejemplo}
\declaretheorem[
  style=thmstyle,
  name=Lema,
  numberlike=thm,
]{lema}
